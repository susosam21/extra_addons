<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Leave Type Form View - Add code field -->
    <record id="view_hr_leave_type_form_inherit" model="ir.ui.view">
        <field name="name">hr.leave.type.form.inherit</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='time_type']" position="after">
                <field name="code" placeholder="e.g., ANNUAL, SICK, HOLIDAY"/>
            </xpath>
        </field>
    </record>

    <!-- Leave Type Tree View - Add code field -->
    <record id="view_hr_leave_type_tree_inherit" model="ir.ui.view">
        <field name="name">hr.leave.type.tree.inherit</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.view_holiday_status_normal_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="code" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- Attendance Tree View with working_type -->
    <record id="view_attendance_tree_inherit" model="ir.ui.view">
        <field name="name">hr.attendance.tree.inherit</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-danger">working_type in ('sick', 'annual_leave')</attribute>
                <attribute name="decoration-success">working_type == 'weekend'</attribute>
                <attribute name="decoration-info">working_type == 'remote'</attribute>
                <attribute name="decoration-warning">working_type == 'holiday'</attribute>
            </xpath>
            <xpath expr="//field[@name='employee_id']" position="after">
                <field name="day_name" optional="show"/>
                <field name="working_type" optional="show"/>
                <field name="note" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Attendance Form View with working_type -->
    <record id="view_attendance_form_inherit" model="ir.ui.view">
        <field name="name">hr.attendance.form.inherit</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='employee_id']" position="after">
                <field name="day_name"/>
                <field name="working_type"/>
            </xpath>
            <xpath expr="//field[@name='check_in']" position="attributes">
                <attribute name="widget">datetime</attribute>
                <attribute name="options">{'datepicker': {'format': 'MM/dd/yyyy hh:mm a', 'showSeconds': false}, 'timepicker': {'format': '%I:%M %p', 'showMeridian': true, 'minuteStep': 5}}</attribute>
                <attribute name="placeholder">DD/MM/YYYY hh:mm AM/PM</attribute>
            </xpath>
            <xpath expr="//field[@name='check_out']" position="attributes">
                <attribute name="widget">datetime</attribute>
                <attribute name="options">{'datepicker': {'format': 'MM/dd/yyyy hh:mm a', 'showSeconds': false}, 'timepicker': {'format': '%I:%M %p', 'showMeridian': true, 'minuteStep': 5}}</attribute>
                <attribute name="placeholder">DD/MM/YYYY hh:mm AM/PM</attribute>
            </xpath>
            <xpath expr="//field[@name='check_out']" position="after">
                <field name="note" placeholder="Leave description or notes..."/>
            </xpath>
        </field>
    </record>

</odoo>
