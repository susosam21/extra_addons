<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron Job to Create Time Off Attendances Monthly -->
        <record id="ir_cron_create_timeoff_attendances" model="ir.cron">
            <field name="name">Create Time Off Attendances</field>
            <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
            <field name="state">code</field>
            <field name="code">model._create_timeoff_attendances()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(DateTime.now() + relativedelta(day=1)).strftime('%Y-%m-%d 00:00:00')"/>
        </record>

        <!-- Cron Job to Create Weekend Attendances Monthly -->
        <record id="ir_cron_create_weekend_attendances" model="ir.cron">
            <field name="name">Create Weekend Attendances</field>
            <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
            <field name="state">code</field>
            <field name="code">model._create_weekend_attendances()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(DateTime.now() + relativedelta(day=1)).strftime('%Y-%m-%d 00:30:00')"/>
        </record>

        <!-- Cron Job to Auto Allocate Leaves Monthly -->
        <record id="ir_cron_auto_allocate_leaves" model="ir.cron">
            <field name="name">Auto Allocate Employee Leaves</field>
            <field name="model_id" ref="hr_holidays.model_hr_leave_allocation"/>
            <field name="state">code</field>
            <field name="code">model._auto_allocate_leaves()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(DateTime.now() + relativedelta(day=1)).strftime('%Y-%m-%d 01:00:00')"/>
        </record>
    </data>
</odoo>
